---
import { Image } from "astro:assets";
import Button from "./Button.astro";

const { placeholder, buttonText } = Astro.props;
---

<section class="feature">
  <Image src={placeholder} alt="Beskrivende tekst" class="placeholder" />
  <div class="content">
    <h2>Lorem ipsum dolor sit amet consectetur.</h2>
    <p>
      Lorem ipsum dolor sit amet consectetur. Purus ut eget odio nulla aliquam.
      Sed in scelerisque elit morbi maecenas nec cras parturient.
    </p>
    <Button buttonText={buttonText} />
  </div>
</section>

<style>
  .placeholder {
  width: 400px;
    height: 600px;
    object-fit: cover;
  }

  .content {
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
  }

  .feature {
    display: grid;
    gap: 5rem;
    margin: 4rem;
    grid-template-columns: 1fr;
  }

  /* swap columns on desktop */
  @media (min-width: 768px) {
    .feature {
      grid-template-columns: 1fr 1fr;
      
    }

    .placeholder {
      grid-column: 2;
      grid-row: 1;
    }

    .content {
      grid-column: 1;
      grid-row: 1;
    }
  }
</style>
