---
import { Image } from "astro:assets";
import Button from "./Button.astro"
import logo from "../assets/nustuff/YCDK_logo_stamp.svg"

const { buttonLink } = Astro.props;
---
<nav>
  <Image src={logo} alt="Logo" class="logo"/>
  <Button buttonText="knap" buttonLink={buttonLink}/>
</nav>

<style>
  nav {
    display: flex;
    position: fixed;
    z-index: 10;
    width: 100%;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
  }

  .logo {
    height: 100px;
   width: clamp(50px, 40vw, 100px);
  }