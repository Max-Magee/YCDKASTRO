---
import { Image } from "astro:assets";
const { biglogo, bgImage } = Astro.props; // accept a background image as a prop
---

<section class="hero" style={`background-image: url(${bgImage.src});`}>
  <div class="hero-content">
    <Image src={biglogo} alt="Beskrivende tekst" class="big-logo" />
    <p>Tagline here</p>
  </div>
</section>

<style>
.hero {
  position: relative;
  background-size: cover;
  background-position: center;
  min-height: 100vh;

  display: flex;             
  justify-content: center;     
  align-items: center;         
  text-align: center;    
}

.hero-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.big-logo {
  width: clamp(400px, 40vw, 600px);
}

.hero-content p {
 color: white;
  margin-top: 1rem;
}
</style>
