---
import Layout from "../layouts/Layout.astro";
import ThreeCard from "../layouts/ThreeCard.astro";

import cardone from "../assets/nustuff/Interview1_Farve.png";
import cardtwo from "../assets/nustuff/Interview2_Farve.png";
import cardthree from "../assets/nustuff/Interview3_Farve.png";
import BC1 from "../assets/nustuff/Business1.png";
import BC2 from "../assets/nustuff/Business2.png";
import AAb from "../assets/nustuff/3DPinkLogo_AtA.svg"
import biglogo from "../assets/nustuff/PinkLogo_AtA.svg"
import bg1 from "../assets/nustuff/BW_HeroImg1_AtA.png"
import footerlogo from "../assets/nustuff/PinkLogo_YCDK.svg"

import work from "/videos/PinkHeroVid1_AtA.mp4"
import vid2 from "/videos/PinkHeroVid1_AtA.mp4"

import BigCardL from "../components/BigCardL.astro";
import BigCardR from "../components/BigCardR.astro";
import HeroImg from "../components/HeroImg.astro";
import HeroVideo from "../components/HeroVideo.astro";
import Graphics from "../components/Graphics.astro";
import Card from "../components/Card.astro";
import Textafsnit from "../components/Textafsnit.astro";

const buttonLink = "/b_test";
---

<Layout title="YCDK AtA" buttonLink={buttonLink} footerlogo={footerlogo}>

  <div class="nupage">
<HeroVideo biglogo={biglogo} herovideo={work}/>
	
 <Textafsnit overskrift="Det ene 'Ansigt'" tekst="Hør fra tidligere deltagende i 'Ansigt til Ansigt'."/>
  <ThreeCard>
    <Card
    placeholder={cardone}
    overskrift="Alex"
    tekst="Det motiverer mig virkelig, og jeg kan mærke, at jeg glæder mig endnu mere til min fremtid inden for den kreative branche."/>
    <Card
    placeholder={cardtwo}
    overskrift="Mathilde"
    tekst="Jeg synes især, det var fedt at møde professionelle og høre deres historier og erfaringer."/>
    <Card
    placeholder={cardthree}
    overskrift="Sofie"
    tekst="Jeg lagde hurtigt mærke til, hvor varm og hyggelig atmosfæren var, og det gjorde hele oplevelsen meget mere personlig."/>
  </ThreeCard>

	<HeroImg biglogo={AAb} bgImage={bg1}/>
   <Textafsnit overskrift="Det andet 'Ansigt'" tekst="Læs om de deltagende virksomheder."/>
  <BigCardL
    placeholder={BC1}
    overskrift="Ansigt til Ansigt med Market Square"
    tekst="Lorem ipsum dolor sit amet consectetur. Quis senectus felis
        turpis lorem congue feugiat sagittis dictum." buttonText="Læs Mere" />
  <BigCardR
    placeholder={BC2}
    overskrift="Ansigt til Ansigt med DDB NORD"
    tekst="Lorem ipsum dolor sit amet consectetur. Quis senectus felis
        turpis lorem congue feugiat sagittis dictum." buttonText="Læs Mere" />

  <Graphics
    herovideo={vid2}
    overskrift="Næste event 3. Marts 2026"/  > 


    <style>
  body {
  background-color: var(--primary-malibu-200);}



</style>
</Layout>